<table class="table table-hover">
	<thead>
		<tr>
			<th colspan="2">Hra</th>
			<th>Hodnocení</th>
			<th>Stav</th>
			<th>Rezervací</th>
		</tr>
	</thead>
	<tbody>
		<tr n:foreach="$games as $game">
			<td class="column-cover">
				<a n:href="Game:, id => $game->id">
					<img src="{$game->meta->cover}" class="cover small">
				</a>
			</td>
			<td>
				<a n:href="Game:, id => $game->id">
					{$game->meta->name}
				</a>
			</td>
			<td>
				{$game->meta->rating|number:1}
			</td>
			<td>
				{if $game->available}
					k vypůjčení
				{elseif $game->proposed}
					hlasování
				{elseif $game->purchased}
					koupeno, na cestě
				{elseif $game->broken}
					hra je rozbitá
				{/if}
			</td>
			<td>
				{$game->reservations->count()}
			</td>
		</tr>
	</tbody>
</table>
