{#content}
<table>
	<tr n:foreach="$games as $game">
		<td>
			<a n:href="Game:, id => $game->id">
				{$game->meta->name}
			</a>
		</td>
		<td>
			{$game->meta->rating|number:1}
		</td>
		<td>
			{if $game->available}
				k vypůjčení
			{elseif $game->proposed}
				hlasování
			{elseif $game->purchased}
				koupeno, na cestě
			{elseif $game->broken}
				hra je rozbitá
			{/if}
		</td>
	</tr>
</table>
